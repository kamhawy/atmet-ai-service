{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Azure": "Warning"
    }
  },
  "AllowedHosts": "https://atmetai-demo.lovable.app;localhost",

  "AzureAI": {
    "ProjectEndpoint": "https://atmet-demo-resource.services.ai.azure.com/api/projects/atmet-demo-resource-project",
    "ManagedIdentityClientId": "uma-atmet-dev",
    "EnableTelemetry": true,
    "DefaultModelDeployment": "gpt-4o",
    "RequestTimeoutSeconds": 120,
    "MaxRetryAttempts": 3
  },

  "ApiKeys": {
    "HeaderName": "X-Api-Key",
    "Keys": ["961a98e6-e6d9-4c9d-9fd6-3cfd9b4bfb78"]
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://atmetai-demo.lovable.app"
    ]
  },

  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=b7cbeb3f-c187-4152-9682-c217f1613159;IngestionEndpoint=https://westeurope-5.in.applicationinsights.azure.com/;LiveEndpoint=https://westeurope.livediagnostics.monitor.azure.com/;ApplicationId=af911771-6818-45c2-a664-ed74c3baf794",
    "EnableAdaptiveSampling": true,
    "EnableDependencyTracking": true,
    "EnablePerformanceCounterCollectionModule": true
  },

  "Caching": {
    "DeploymentsCacheDurationMinutes": 60,
    "ConnectionsCacheDurationMinutes": 30,
    "IndexesCacheDurationMinutes": 15,
    "EnableDistributedCache": false,
    "Redis": {
      "ConnectionString": "{your-redis-connection-string}",
      "InstanceName": "ATMETAI:"
    }
  },

  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueLimit": 10
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.ApplicationInsights"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "ATMET.AI.Service",
      "Environment": "Development"
    }
  }
}
